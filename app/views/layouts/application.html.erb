<!DOCTYPE html>
<html>
  <head>
    <title>BaseballApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="header-logo">
        <% if @current_user %>
          <%= link_to("FreeBaseBall", "/posts/index") %>
        <% else %>
          <%= link_to("FreeBaseBall", "/") %>
        <% end %>
      </div>
      
      <ul class="header-menus">

        <% if @current_user %>
          <li>
            <%= link_to(@current_user.name,"/users/#{@current_user.id}") %>
          </li>

          <li>
            <%= link_to("募集一覧", "/posts/index") %>
          </li>

          <li>
            <%= link_to("新規募集", "/posts/new") %>
          </li>

          <li>
            <%= link_to("チーム一覧", "/users/index") %>
          </li>
          <li>
            <%= link_to("ログアウト", "/logout",{method:"post"}) %>
          </li>


        <% else %>
          <li>
            <%= link_to("FreeBaseBallとは", "/about") %>
          </li>

          <li>
            <%= link_to("新規チーム登録", "/signup") %>
          </li>

          <li>
            <%= link_to("ログイン", "/login") %>
          </li>
        <% end %>
      </ul>
    </header>

    <% if flash[:notice] %>
       <div class="flash">
         <%= flash[:notice] %>
       </div>
    <% end %>

    <%= yield %>

  </body>
</html>
